<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, "Nome" %><br />
  <%= f.text_field :name, autofocus: true, placeholder: "Como você se chama?" %></div>

  <div><%= f.label :username, "Nome de usuário" %><br />
  <%= f.text_field :username, placeholder: "Qual seu nick para fazer login?" %></div>

  <div><%= f.label :age, "Data de nascimento" %><br />
  <%= f.date_field :age, placeholder: "Quando você nasceu?" %></div>

  <div><%= f.label :email, "Email" %><br />
  <%= f.email_field :email, placeholder: "Posso te mandar e-mails?" %></div>

  <div><%= f.label :password, "Senha" %><br />
  <%= f.password_field :password, placeholder: "Não conte pra ninguem, viu!" %></div>

  <div><%= f.label :password_confirmation, "Confirmação de Senha" %><br />
  <%= f.password_field :password_confirmation, placeholder: "Lembra da sua senha?" %></div>

  <div><%= f.submit "Entrar" %></div>
<% end %>

<%= render "devise/shared/links" %>
